{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": false,
        "node": true,
        "amd": true
    },
    "globals": {
        "requirejs": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [ "error", 4 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "prefer-const": 0,
        "comma-dangle": 0
    }
}
